---
import {data} from '../../../../lib/data'
import {state} from '../../../../lib/store'
import SanityImage from '../../../ui/sanity-image.astro'

type Props = {}

const poster = state.get().data?.poster!
const title = state.get().data?.title!

const {} = Astro.props
---

<div class='flex h-[calc(100dvh_-_20vh)] items-center max-md:flex-col'>
  <div class='flex w-full items-center justify-center'>
    <SanityImage
      className='mask mask-squircle ml-8'
      loading={'eager'}
      height={300}
      sanitySrc={poster}
      width={400}
      alt={title}
    />
  </div>
  <div class='w-full'>
    <span
      class='bg-gradient-to-r from-fuchsia-600 to-pink-600 bg-clip-text text-sm font-bold uppercase text-transparent'
      >from {data.creator.country}</span
    >
    <div class='my-4 flex items-start text-4xl font-semibold capitalize'>
      <span class=''>!Hy ðŸ‘‹ I am </span>
      <div class='flex flex-col items-center'>
        <span class='mx-2 uppercase'>{data.creator.name}</span>
        <span class='mt-2 h-[.15rem] w-60 rounded-full bg-gradient-to-r from-blue-300 to-yellow-300'
        ></span>
      </div>
    </div>
    <p class='text-base'>
      {data.slogan}
    </p>
    <div class='my-4 flex w-full'>
      <button class='btn bg-gradient-to-r from-blue-500 to-pink-600 capitalize text-white'
        >Let's Connect</button
      >
    </div>
  </div>
</div>
